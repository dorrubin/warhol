<h1>These are the cards under <%=@tag%></h1>
	<form class="collections-search" method="get" action="/collections">
		<label for="tag">Tag Search:</label>
		<input type="text" value="<%= @tag %>" name="tag" placeholder="ex. art, music">
		<input type="submit" value="Go!">
	</form>
	<br>
	<hr>	

	<% @topic_cards.each do |card| %>
	<div class="card">
		<q class="value"><%= card.value %></q> <br>
		<a href="/collections/<%= card.author %>"><cite class="author">@<%= card.author %></cite></a>
		<p class="tags"><%= card.tags %></p>
		<p class="time">Last Updated: <%= card.updated %></p>
	</div>
	<% end %>